<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/btn_toast_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:minHeight="50dp"
        android:text="Toast-system"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_toast_style_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="150dp"
        android:minHeight="50dp"
        android:text="Toast-style-base"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_toast_style_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="150dp"
        android:minHeight="50dp"
        android:text="Toast-style-white"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_toast_style_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="150dp"
        android:minHeight="50dp"
        android:text="Toast-style-black"
        android:textAllCaps="false" />

</LinearLayout>